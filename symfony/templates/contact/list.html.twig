{% extends 'base.html.twig' %}

{% block title %}{{ 'app.ui.contact.manage'|trans }} | {{ parent() }}{% endblock %}

{% block body %}
<div class="container">

<h1>{{ 'app.ui.contact.manage'|trans }}</h1>

<div>
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">{{ 'app.form.contact.button'|trans }}</button>
    {{ form_end(form) }}
</div>
<div>
    <h2>{{ 'app.ui.contact.label'|trans }}</h2>

    {% if pager is not empty %}

        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">{{ 'app.ui.contact.name'|trans }}</th>
                    <th scope="col">{{ 'app.ui.contact.surname'|trans }}</th>
                    <th scope="col">{{ 'app.ui.contact.phone'|trans }}</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
        {% for contact in pager %}
            <tr>
                <td>{{ contact.name }}</td>
                <td>{{ contact.surname}}</td>
                <td>{{ contact.phone }}</td>
            </tr>
        {% endfor %}

            </tbody>
        </table>
        {{ pagerfanta(pager) }}
    {% else %}
    <br/>
        {{ 'app.ui.contact.none'|trans }}
    {% endif %}
</div>

</div>
{% endblock %}